pipeline {
    agent any
    
    stages {
        stage("build code") {
            steps {
                script {
                   sh "tar -cvf ${buildNumber}.tar index.html "
                   sh "ls -l ${buildNumber}.tar"
                }
               }
            }
        stage("publish to nexus") {
            steps {
                script {
                    sh "curl -v -u admin:admin --upload-file ${buildNumber}.tar http://67.202.11.212:8081/repository/UI-builds/dev/${buildNumber}.tar"
                }
            }
        }
        stage('run deploy job') {
steps {
build "qa-UI-deploy"
}
}
        
       
      
        
    }
    
}
